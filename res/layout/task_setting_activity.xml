<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="?android:attr/dividerHorizontal"
        android:showDividers="middle" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView1"
                android:text="@string/task_name"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip" >
            </TextView>

            <EditText
                android:id="@+id/editText1"
                android:inputType="text"
                android:hint="@string/hint_task_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dip"
                android:layout_marginRight="26dip"
                android:layout_marginBottom="10dip" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/recurrenceLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground" >
            <TextView
                android:id="@+id/textView2"
                android:text="@string/recurrence"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip" >
            </TextView>
            <com.hkb48.keepdo.RecurrenceView
                android:id="@+id/recurrenceView"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dip"
                android:layout_marginRight="26dip"
                android:layout_marginBottom="10dip" >
            </com.hkb48.keepdo.RecurrenceView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/cancelButton"
            android:onClick="onCancelClicked"
            android:layout_width="0dip"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:text="@string/task_cancel" />

        <Button
            android:id="@+id/okButton"
            android:onClick="onSaveClicked"
            android:enabled="false"
            android:layout_width="0dip"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:text="@string/task_save" />
    </LinearLayout>

</RelativeLayout>
