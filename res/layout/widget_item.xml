<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/widget_item_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/widget_item_background_selector" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/widget_item_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:contentDescription="@string/accessibility_done_mark"
            android:src="@drawable/ic_not_done_3"
            android:visibility="visible" />

        <TextView
            android:id="@+id/widget_item_text"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:duplicateParentState="true"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="#232323"
            android:textIsSelectable="false"
            android:textSize="@dimen/widget_list_item_font_size" />
    </LinearLayout>

</FrameLayout>